  <h1><%= title %></h1>

  <!-- Flash Messages -->
  <% if (typeof messages === "function" && messages().length > 0) { %>
    <%- messages() %>
  <% } %>
  
 
  <!-- Login Form -->
  <div class="login-wrapper">
        <form id="loginForm" action="/account/login" method="post">
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" required>

      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required>

      <button type="submit">Login</button>
    </form>

    <p class="signup-link">No account? <a href="/account/register">Sign-up</a></p>
  </div>
<!-- Show Password Checkbox -->
<label>
  <input type="checkbox" onclick="togglePasswordVisibility('loginPassword')"> Show Password
</label>