<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<div class="account-section">
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <div class="account-actions">
    <a href="/account/update/<%= accountData.account_id %>" class="dashboard-card">
      ✏️ Update Account Info
    </a>

    <a href="/account/my-reviews" class="dashboard-card">
      📝 Manage Your Reviews
    </a>

    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <a href="/inv" class="dashboard-card">
        🛠️ Manage Inventory
      </a>
    <% } %>
  </div>
</div>

