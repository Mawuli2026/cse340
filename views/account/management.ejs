<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<div class="account-section">
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <!-- Styled Button for Update Account -->
  <p>
    <a href="/account/update/<%= accountData.account_id %>" class="account-link-button">
      Update Account Information
    </a>
  </p>

  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv" class="account-link-button">Manage Inventory</a>
    </p>
  <% } %>
</div>
